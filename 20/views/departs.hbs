    <title>Tasks</title>
     <script defer="true">
   async function DeleteMethod(ID) {
    const options = {
        method: 'DELETE',
        headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'   
        }
};
  
    try
        {
      
          const response = await fetch('http://localhost:3000/depart/delete/'+ ID , options);
          document.location.href = 'http://localhost:3000/depart'; 
        }
        catch(err)
        {
          console.log(err);
        }
        
    }
  </script>
